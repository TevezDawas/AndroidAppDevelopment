<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CouponDetails"
    android:background="@color/a">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar"/>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:background="@color/material_dynamic_neutral90"
            android:backgroundTint="@color/b"
            android:gravity="center"
            android:padding="20dp">

            <ImageView
                android:id="@+id/profile_background"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_13" />

            <TextView
                android:id="@+id/coupon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/profile_background"
                android:fontFamily="serif-monospace"
                android:includeFontPadding="false"
                android:text="Intel"
                android:textColor="@color/d"
                android:textSize="35sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="493dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:textColorHint="@color/d">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/titleLabelid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Title"
                    android:textColorHint="@color/d">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/titleText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableLeft="@drawable/ic_company"
                        android:drawablePadding="10dp"
                        android:text="Core 30%"
                        android:textColor="@color/d" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/companyLabelid"
                    android:layout_width="187dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Company"
                    android:textColorHint="@color/d">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/companyText"
                        android:layout_width="171dp"
                        android:layout_height="56dp"
                        android:drawableLeft="@drawable/ic_company"
                        android:drawablePadding="10dp"
                        android:text="Intel"
                        android:textColor="@color/d" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/catagoryLabelid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Catagory"
                    android:textColorHint="@color/d">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/catagoryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_company"
                        android:drawablePadding="10dp"
                        android:text="Food"
                        android:textColor="@color/d" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/startDate"
                    android:layout_width="187dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Start Date"
                    android:textColorHint="@color/d">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/startDateText"
                        android:layout_width="171dp"
                        android:layout_height="56dp"
                        android:drawableLeft="@drawable/ic_company"
                        android:drawablePadding="10dp"
                        android:text="17/1/2002"
                        android:textColor="@color/d" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/endDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="End Date"
                    android:textColorHint="@color/d">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/endDateText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_company"
                        android:drawablePadding="10dp"
                        android:text="20/10/2070"
                        android:textColor="@color/d" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/amoutLabel"
                    android:layout_width="187dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Amount"
                    android:textColorHint="@color/d">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/amountText"
                        android:layout_width="171dp"
                        android:layout_height="56dp"
                        android:drawableLeft="@drawable/ic_company"
                        android:drawablePadding="10dp"
                        android:text="30"
                        android:textColor="@color/d" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/priceLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Price"
                    android:textColorHint="@color/d">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/priceText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_company"
                        android:drawablePadding="10dp"
                        android:text="100"
                        android:textColor="@color/d" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/descLabelid"
                    android:layout_width="372dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="DESCRIPTION"
                    android:textColorHint="@color/d">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/descText"
                        android:layout_width="362dp"
                        android:layout_height="63dp"
                        android:drawableLeft="@drawable/ic_company"
                        android:drawablePadding="10dp"
                        android:textColor="@color/d" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/main_editbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/c"
                    android:fontFamily="serif"
                    android:text="Edit Profile"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/main_deletebtn"
                    android:layout_width="212dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/c"
                    android:fontFamily="serif"
                    android:text="Delete Account"
                    android:textSize="18dp" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</ScrollView>
