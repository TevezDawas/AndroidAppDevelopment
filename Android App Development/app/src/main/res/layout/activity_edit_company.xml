<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditCompany"
    android:background="@color/a">

    <TextView
        android:id="@+id/editCompany_textView2"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@color/b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editCompany_textView4"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:background="@color/c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="20dp" />

    <TextView
        android:id="@+id/editCompany_textView5"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@color/d"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/editCompany_Company"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:text="    Edit Company   "
        android:textColor="@color/d"
        android:textSize="34sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCompany_textView4" />

    <EditText
        android:id="@+id/editCompany_etName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="#eeeeee"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        app:circularflow_angles="@string/material_motion_easing_accelerated"
        app:layout_constraintEnd_toEndOf="@+id/editCompany_Company"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="@+id/editCompany_Company"
        app:layout_constraintTop_toBottomOf="@+id/editCompany_Company" />

    <EditText
        android:id="@+id/editCompany_etEMail"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="#eeeeee"
        android:ems="10"
        android:hint="eMail"
        android:inputType="textEmailAddress"
        app:circularflow_angles="@string/material_motion_easing_accelerated"
        app:layout_constraintEnd_toEndOf="@+id/editCompany_etName"
        app:layout_constraintStart_toStartOf="@+id/editCompany_etName"
        app:layout_constraintTop_toBottomOf="@+id/editCompany_etName" />

    <EditText
        android:id="@+id/editCompany_etPassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="#eeeeee"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        app:circularflow_angles="@string/material_motion_easing_accelerated"
        app:layout_constraintEnd_toEndOf="@+id/editCompany_etEMail"
        app:layout_constraintStart_toStartOf="@+id/editCompany_etEMail"
        app:layout_constraintTop_toBottomOf="@+id/editCompany_etEMail" />

    <EditText
        android:id="@+id/editCompany_etConfirmPassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/editbox_background_normal"
        android:backgroundTint="#eeeeee"
        android:ems="10"
        android:hint="confirm password"
        android:inputType="textPassword"
        app:circularflow_angles="@string/material_motion_easing_accelerated"
        app:layout_constraintEnd_toEndOf="@+id/editCompany_etPassword"
        app:layout_constraintStart_toStartOf="@+id/editCompany_etPassword"
        app:layout_constraintTop_toBottomOf="@+id/editCompany_etPassword" />


    <Button
        android:id="@+id/editCompany_CANCEL"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/b"
        android:text="CANCEL"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:textStyle="italic"
        app:cornerRadius="@android:dimen/system_app_widget_inner_radius"
        app:layout_constraintBottom_toTopOf="@+id/editCompany_textView5"
        app:layout_constraintStart_toStartOf="@+id/editCompany_etConfirmPassword" />

    <Button
        android:id="@+id/editCompany_Edit"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/c"
        android:text="EDIT"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:textStyle="italic"
        app:cornerRadius="@android:dimen/system_app_widget_inner_radius"
        app:layout_constraintBottom_toTopOf="@+id/editCompany_textView5"
        app:layout_constraintEnd_toEndOf="@+id/editCompany_etConfirmPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>