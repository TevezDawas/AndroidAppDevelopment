<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListCustomersForCompany"
    android:background="@color/a">

    <include
        android:id="@+id/include5"
        layout="@layout/toolbarcustomerforcompany" />
    <LinearLayout
        android:id="@+id/searchbar44"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rectangle_background"
        android:orientation="horizontal"

        app:layout_constraintTop_toBottomOf="@+id/include5"
        tools:layout_editor_absoluteX="15dp">

        <EditText
            android:id="@+id/searchText44"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:backgroundTint="@color/d"
            android:hint="Search"
            android:imeOptions="actionSearch"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingStart="15dp"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/searchIcon44"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@color/d"
            android:contentDescription="@string/app_name"
            android:padding="6dp"
            android:src="@drawable/ic_search">

        </ImageView>

    </LinearLayout>

    <ListView
        android:id="@+id/customer_view_for_company"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchbar44"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>